<div class="container">
  <h3>Rooms for <%=  @hotel.name %></h3>

  <table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <th><%= room.name %></th>
            <th><%= room.hotel.address %></th>
            <th><%= link_to "See Room", admin_hotel_room_path(@hotel, room) %></th>
          </tr>
        <% end %>
    </tbody>
  </table>

  <%= link_to "New room", new_admin_hotel_room_path %>
</div>

