<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#<%= "room-av-#{availability.id}" %>" aria-expanded="false" aria-controls="<%= "room-av-#{availability.id}" %>" class="collapsed">
          <%= availability.start.to_formatted_s(:short) %>  <span class="pull-right"><%= "#{availability.hours} hours" %> | <%= availability.available?? "Available" : "Not available" %> | <%= "$#{availability.price}" %></span>
        </a>
      </h4>
    </div>
    <div id="<%= "room-av-#{availability.id}" %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">

        <%= form_for [:admin, @room, availability], html: {class: "form-inline"} do |f| %>

          <div class="form-group">
            <%= f.label :start, "Start Date/Time Availability" %><br />
            <%= f.datetime_select :start, { ampm: true }, { class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.label :available %><br />
            <%= f.select :available, [["Available", 1], ["Not available", 0]], {}, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :hours %><br />
            <%= f.select :hours, RoomAvailability.hours.keys.to_a, {}, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :price %><br />
            <%= f.number_field :price, class: "form-control" %>
          </div>

          <div class="text-center"><br />
            <%= f.submit "Update", class: "btn btn-primary form-control" %>
          </div>


        <% end %>



      </div>
    </div>
  </div