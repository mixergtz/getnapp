<%= form_for [:admin, @hotel, @room], html: {multipart: true} do |f| %>
  <% if @room.errors.full_messages.any? %>
    <div class="errors">
      <h3>There's some errors on the form:</h3>
      <ul>
      <% @room.errors.full_messages.each do |error_message| %>
        <li><%= error_message if @room.errors.full_messages.first == error_message %> <br /></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>

<!--   <div class="form-group">
    <%#= f.label :logo %><br />
    <%#= f.file_field :logo, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
  </div> -->

  <p class="text-center"><%= f.submit "Submit", class: "btn btn-primary" %>  <%= link_to 'Back to rooms', admin_hotel_rooms_path, class: "btn btn-default" %></p>
<% end %>
