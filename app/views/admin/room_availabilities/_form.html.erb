<%= form_for [:admin, @hotel, @room, @room_availability], html: { class: "form-horizontal" } do |f| %>

  <% if @room_availability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room_availability.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
      <% @room_availability.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :start, "Start Date/Time Availability" %><br />
    <%= f.datetime_select :start, { ampm: true }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :available %><br />
    <%= f.select :available, [["Available", 1], ["Not available", 0]], {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :hours %><br />
    <%= f.select :hours, RoomAvailability::HOURS, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="text-center"><br />
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>


<% end %>